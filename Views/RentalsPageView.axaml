<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:BikeSystemAdminPanel.ViewModels"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            x:Class="BikeSystemAdminPanel.Views.RentalsPageView"
            x:DataType="vm:RentalsPageViewModel">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Rentals" FontSize="24" HorizontalAlignment="Center" Margin="0 0 0 10"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" HorizontalAlignment="Center" Spacing="10" Margin="0 10 0 0">
            <StackPanel.Styles>
                <Style Selector="TextBlock.valid">
                    <Setter Property="Foreground" Value="Green" />
                </Style>
                <Style Selector="TextBlock.notvalid">
                    <Setter Property="Foreground" Value="Red" />
                </Style>
            </StackPanel.Styles>
            <Button Content="Simulate Rental" Command="{Binding SimulateRentalCommand}" />
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" HorizontalAlignment="Center" Classes.valid = "{Binding IsStatusSuccess}"
                       Classes.notvalid = "{Binding !IsStatusSuccess}"/>
        </StackPanel>
        <TextBlock Text="No rentals are currently added to the system."
                        FontSize="16"
                        Foreground="Gray"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding IsRentalsEmpty}"/>
        <DataGrid ItemsSource="{Binding Rentals}" AutoGenerateColumns="False" IsReadOnly="False" Tag="{Binding}"
                  IsVisible="{Binding !IsRentalsEmpty}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" />
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" />
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" />
                <DataGridTextColumn Header="User Phone" Binding="{Binding UserPhoneNumber}" />
                <DataGridTextColumn Header="Station ID" Binding="{Binding StationId}" />
                <DataGridTextColumn Header="Bicycle ID" Binding="{Binding BicycleId}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>